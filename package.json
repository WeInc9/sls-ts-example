{
  "name": "sls-ts-sample",
  "version": "1.0.0",
  "description": "Serverless Type Script Example project ",
  "main": "handler.js",
  "scripts": {
    "start": "sls offline start",
    "debug": "export SLS_DEBUG=* && node --inspect ./node_modules/serverless-offline offline -s dev",
    "build": "node_modules/typescript/bin/tsc",
    "watch": "node_modules/typescript/bin/tsc -w --preserveWatchOutput",
    "test": "NODE_OPTIONS=--unhandled-rejections=warn jest",
    "coverage": "NODE_OPTIONS=--unhandled-rejections=warn jest --coverage"
  },
  "author": "Saravanan Renganathan",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node14": "^1.0.0",
    "@types/jest": "^26.0.23",
    "@types/mocha": "^8.2.2",
    "aws-lambda-mock-context": "^3.2.1",
    "chai": "^4.3.4",
    "jest": "^26.6.3",
    "mocha": "^8.4.0",
    "serverless-jest-plugin": "^0.3.0",
    "serverless-mocha-plugin": "^1.12.0",
    "serverless-offline": "^6.8.0",
    "serverless-plugin-typescript": "^1.1.9",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.4"
  }
}
